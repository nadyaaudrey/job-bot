    <!--Search bar-->
<div class="input-group md-form form-sm form-2 pl-0" style="margin-top:-24px;">
    <input class="form-control my-0 py-1 red-border" type="text" placeholder="&ensp;&ensp;Search jobs, positions, etc." aria-label="Search">
    <span class="input-group-addon red lighten-3" id="basic-addon1"><i class="fa fa-search text-grey" aria-hidden="true"></i></span>
</div>

<!--Filter button-->
<div class="dropdown">
<button id="filter-button" data-toggle="dropdown" type="button" style="margin-top:-15px" class="btn btn-red float-right btn-sm dropdown-toggle">Filter</button>
<div class="dropdown-menu" aria-labelledby="filter-button">
	<a id="bookmarked-only" class="dropdown-item" href="#">Bookmarked</a>
	<a id="no-filter" class="dropdown-item" href="#">No Filter</a>
</div>
</div>

<!--Jobs entries-->
<div style="margin-top:50px">
{{#each jobs}}
<a href="/job_desc/{{id}}" {{#unless Bookmarked}}class="unbookmarked"{{/unless}}>
<div class="media border">
	<div class="media-left">
		<img src={{img}} width="100" height="100">
	</div>
	<div class="media-body">
		<p class="media-heading">{{Position}}</p>
		<p>{{Company}}</p>
		<p>{{Location}}</p>
	</div>
	<span class="media-right fa fa-bookmark{{#unless Bookmarked}}-o{{/unless}} fa-2x" style="margin-right: 50px; margin-top: 50px"></span>
</div>
</a>
{{/each}}
</div>
