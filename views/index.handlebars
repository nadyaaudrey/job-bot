</div>

<!--Filter button-->
{{#unless viewAlt}}
<div class="dropdown">
<button id="filter-button" data-toggle="dropdown" type="button" style="margin-top:-15px" class="btn btn-red float-right btn-sm dropdown-toggle">Filter</button>
<div class="dropdown-menu" aria-labelledby="filter-button">
	<a id="bookmarked-only" class="dropdown-item" href="#">Bookmarks</a>
	<a id="no-filter" class="dropdown-item" href="#">No Filter</a>
</div>
</div>
{{/unless}}

{{#if viewAlt}}
<div class="dropdown">
<button id="filter-button" data-toggle="dropdown" type="button" style="margin-top:-15px" class="btn btn-red float-right btn-sm dropdown-toggle">Show All</button>
<div class="dropdown-menu" aria-labelledby="filter-button">
    <a id="bookmarked-only" class="dropdown-item" href="#">Show Bookmarks</a>
    <a id="no-filter" class="dropdown-item" href="#">Show All</a>
</div>
</div>
{{/if}}

<!--Jobs entries-->
<div style="margin-top:50px" id="job_list">
{{#unless viewAlt}}
{{#each jobs}}
<div class="job_posting">
<a href="/job_desc/{{id}}" {{#unless Bookmarked}}class="unbookmarked"{{/unless}}>
<div class="media border">
	<div class="media-left">
		<img src={{company_logo}} width="100" height="100" style="box-shadow:none; padding:5px;">
	</div>
	<div class="media-body">
		<h6 class="media-heading">{{title}}</h6></br>
		<h6>{{company}}</h6>
		<p>{{location}}</p>
	</div>
	<!--<a href="/addBookmark/{{id}}/index"> -->
	<span class="media-right fa fa-bookmark{{#unless Bookmarked}}-o{{/unless}} fa-2x" style="margin-right: 50px; margin-top: 50px"></span>
	<!--</a> -->
</div>
</a>
</div>
{{/each}}
{{/unless}}

{{#if viewAlt}}
{{#each jobs}}
<div class="job_posting {{#unless Bookmarked}}unbookmarked{{/unless}}">
<div class="media border">

	<div class="media-left">
	    <a href="/job_desc/{{id}}">
		<img src={{company_logo}} width="100" height="100" style="box-shadow:none; padding:5px;">
	    </a>
	</div>
	</a>

	<div class="media-body">
	<a href="/job_desc/{{id}}">
